<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dp"
        android:background="#000000"
        android:id="@+id/selectcity_title">
        <ImageView
            android:id="@+id/title_selectCity_back"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:src="@drawable/select_city_bar_back"/>
        <ImageView
            android:layout_width="1.0dp"
            android:layout_height="40.0dp"
            android:layout_toRightOf="@id/title_selectCity_back"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/title_selectCity_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="当前城市：北京"
            android:textColor="#FFFFFF"
            android:textSize="25.0sp"
            android:gravity="center">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/selectcity_search_rela"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/selectcity_title">

        <EditText
            android:id="@+id/selectcity_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint=" 搜索全国城市"
            android:paddingLeft="35dp"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <Button
            android:id="@+id/selectcity_search_btn"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Search"
            android:layout_alignRight="@id/selectcity_search"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selectcity_search_rela">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/selectcity_lv">
        </ListView>
    </RelativeLayout>
</RelativeLayout>
